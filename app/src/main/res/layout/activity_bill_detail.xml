<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Bill Details"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bill Information Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Bill Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Month Selection -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Select Month"
                        app:boxBackgroundColor="@color/white"
                        android:paddingVertical="4dp">

                        <AutoCompleteTextView
                            android:id="@+id/monthSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:inputType="none"
                            android:clickable="true"
                            android:focusable="false"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Units Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Electricity Units (kWh)"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/unitsInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Enter units (1-1000)"
                        app:boxBackgroundColor="@color/white"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/unitsEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Rebate Selection - Radio Buttons -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rebate Percentage"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rebateRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/rebate0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0%"
                            android:textColor="@color/text_primary"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rebate1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1%"
                            android:textColor="@color/text_primary" />

                        <RadioButton
                            android:id="@+id/rebate2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2%"
                            android:textColor="@color/text_primary" />

                        <RadioButton
                            android:id="@+id/rebate3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3%"
                            android:textColor="@color/text_primary" />

                        <RadioButton
                            android:id="@+id/rebate4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4%"
                            android:textColor="@color/text_primary" />

                        <RadioButton
                            android:id="@+id/rebate5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5%"
                            android:textColor="@color/text_primary" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Calculation Results Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calculation Results"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Date Saved:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="2024-01-15 14:30"
                            android:textColor="@color/text_primary"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- Total Charges -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Charges:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewTotalCharges"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="RM 60.30"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- Final Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Final Cost:"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewFinalCost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="RM 59.09"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/updateButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update Bill"
                    style="@style/AppButton"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/ic_update"
                    android:drawablePadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete Bill"
                    style="@style/AppButton"
                    android:backgroundTint="@color/teal_200"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_delete"
                    android:drawablePadding="8dp" />

            </LinearLayout>

            <!-- Info Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: Changing units or rebate will automatically recalculate the bill."
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="italic"
                android:padding="8dp"
                android:background="@color/teal_200"
                android:backgroundTint="#20C0C5C1"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>